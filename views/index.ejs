                <div>
                    <div id="expense-heading" class="row">
                        <div class="col-md-3">Category</div>
                        <div class="col-md-3">Item Name</div>
                        <div class="col-md-2">Amount</div>
                        <div class="col-md-2">Date</div>
                    </div>
                    <% data.forEach( (data,i) =>{ %>
                        <div class=" <% if(data.delete==true) { %>
                                delete
                        <% } else { %> not-delete <% } %>
                        row expense-items">
                            <div class="col-md-1 edit"  data-id="<%=data._id%>" data-bs-toggle="modal" data-bs-target="#editmodal">Edit</div>
                            <div class="col-md-3">
                                <%= data.category.title %>
                            </div>
                            <div class="col-md-3">
                                <%= data.itemName %>
                            </div>
                            <div class="col-md-1">
                                <%= data.amount %>
                            </div>
                            <div class="col-md-3">
                                <%= data.date.toDateString() %>
                            </div>
                            <div data-id = "<%=data._id%>"class="delete-item col-md-1">delete</div>
                        </div>
                    <% }) %>
                    
                    <div class="modal fade" id="editmodal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                            
                        <div class="modal-dialog">
                        <div class="modal-content">
                            
                            <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Edit Expense</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form method="POST" action='/expense/edit'>
                                <input id="edit-id" name="id" style="display:none;">
                                <div class="modal-body">
                                    <label>Category</label>
                                    <select name="category" required>
                                        <% categories.forEach( category => { %>
                                            <option value="<%=category._id%>"><%=category.title%></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="modal-body">
                                    <label>Item Name</label>
                                    <input id="edit-itemName" name="itemName" type="text" required>
                                </div>
                                <div class="modal-body">
                                    <label>Amount</label>
                                    <input id="edit-amount" type="number" name="amount" required>
                                </div>
                                <div class="modal-body">
                                    <label>Date</label>
                                    <input id="edit-date" type="date" name="date" required>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>
                        </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    <script>
        let data = '<%- JSON.stringify(budget)%>'
        data = JSON.parse(data)
        let val =0;
        if(Number(data["budget"])!=0)
            val = Number(data["expenditure"])*100/Number(data["budget"])
        document.getElementById('expense-percentage').innerText = String(val)+" %";
    </script>
    
    <script>

        function getRandomColor() {
            var letters = '0123456789ABCDEF'.split('');
            var color = '#';
            for (var i = 0; i < 6; i++ ) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }
        
        let obj = JSON.parse('<%- JSON.stringify(categorydata) %>')
        console.log(obj)
        let keys = []
        let values = []
        let colors = []
        for(let key in obj){
            keys.push(key);
            values.push(obj[key]);
            colors.push(getRandomColor());
        }
        console.log(values)
        // Pie Chart
        if(keys.length>5){
            let ctx = document.getElementById('myChart').getContext('2d');
            ctx.height=100;

            var barChart = new Chart(ctx,{
                type:'bar',
                data: {
                    labels: keys,
                    datasets: [{
                        label: 'Expenses',
                        data: values,
                        backgroundColor: colors,
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            })
            barChart.aspectRatio = 0;
        }else{
            let ctx = document.getElementById('myChart');
            let chartData = {
                datasets: [{
                    data: values,
                    backgroundColor: colors
                }],

                // These labels appear in the legend and in the tooltips when hovering different arcs
                labels: keys
            };
            ctx.height=130;
            var myPieChart = new Chart(ctx, {
                type: 'pie',
                data: chartData,
                options: {
                    responsive: true,
                    title:{
                        display: true,
                        text: "Expenses"
                    }
                }
                
            });
        }
        
    </script>

   
