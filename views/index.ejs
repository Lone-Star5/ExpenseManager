            <%- include("partials/header") %>

            <div class="col-md-9">
                <div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="budget-overview">
                                <div> Budget Overview</div>
                                <div class="mt-3 row">
                                    <div class="col-md-6">
                                        <div id="expense-percentage-container">
                                            <div id="expense-percentage">
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div style="text-align: center;font-size:1.2rem;" class="col-md-6">
                                        <div> Total Budget </div>
                                        <div> Rs <%= budget.budget %> </div>
                                        <div class="mt-3">Total Expenditure</div>
                                        <div>Rs <%= budget.expenditure %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id="expense-overview">
                                <div> Expense Overview</div>
                                <div style="display:block;height:177px;">
                                    <canvas id="myChart" width="300" height="300"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Add Expense
                        </button>
  
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            
                            <div class="modal-dialog">
                            <div class="modal-content">
                                
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add Expense</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form method="POST" action='/expense/new'>
                                    <div class="modal-body">
                                        <label>Category</label>
                                        <select name="category" required>
                                            <% categories.forEach(category=>{ %>
                                                <option value="<%=category._id%>"><%=category.title%></option>
                                                <% }) %>
                                        </select>
                                    </div>
                                    <div class="modal-body">
                                        <label>Item Name</label>
                                        <input name="itemName" type="text" required>
                                    </div>
                                    <div class="modal-body">
                                        <label>Amount</label>
                                        <input type="number" name="amount" required>
                                    </div>
                                    <div class="modal-body">
                                        <label>Date</label>
                                        <input type="date" name="date" required>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
