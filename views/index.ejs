            <%- include("partials/header") %>

            <div class="col-md-9">
                <div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="budget-overview">
                                <div> Budget Overview</div>
                                <div class="row">
                                    <div class="col-md-6">
                                        figure
                                    </div>
                                    <div class="col-md-6">
                                        <div> Total Budget </div>
                                        <div> 200000 </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id="expense-overview">
                                <div> Expense Overview</div>
                                <div>
                                    Pie Chart
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Add Expense
                        </button>
  
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            
                            <div class="modal-dialog">
                            <div class="modal-content">
                                
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add Expense</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form method="POST" action='/expense/new'>
                                    <div class="modal-body">
                                        <label>Category</label>
                                        <select name="category" required>
                                            <% categories.forEach(category=>{ %>
                                                <option value="<%=category._id%>"><%=category.title%></option>
                                                <% }) %>
                                        </select>
                                    </div>
                                    <div class="modal-body">
                                        <label>Item Name</label>
                                        <input name="itemName" type="text" required>
                                    </div>
                                    <div class="modal-body">
                                        <label>Amount</label>
                                        <input type="number" name="amount" required>
                                    </div>
                                    <div class="modal-body">
                                        <label>Date</label>
                                        <input type="date" name="date" required>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </form>
                            </div>
                            </div>
                        </div>
                </div>

                <div>
                    <div id="expense-heading" class="row">
                        <div class="col-md-3">Category</div>
                        <div class="col-md-3">Item Name</div>
                        <div class="col-md-2">Amount</div>
                        <div class="col-md-2">Date</div>
                    </div>
                    <% data.forEach( (data,i) =>{ %>
                        <div class="row expense-items">
                            <div class="col-md-1 edit"  data-id="<%=data._id%>" data-bs-toggle="modal" data-bs-target="#editmodal">Edit</div>
                            <div class="col-md-3">
                                <%= data.category.title %>
                            </div>
                            <div class="col-md-3">
                                <%= data.itemName %>
                            </div>
                            <div class="col-md-2">
                                <%= data.amount %>
                            </div>
                            <div class="col-md-3">
                                <%= data.date.toDateString() %>
                            </div>
                        </div>
                    <% }) %>
                    
                    <div class="modal fade" id="editmodal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                            
                        <div class="modal-dialog">
                        <div class="modal-content">
                            
                            <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Edit Expense</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form method="POST" action='/expense/edit'>
                                <input id="edit-id" name="id" style="display:none;">
                                <div class="modal-body">
                                    <label>Category</label>
                                    <select name="category" required>
                                        <% categories.forEach( category => { %>
                                            <option value="<%=category._id%>"><%=category.title%></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="modal-body">
                                    <label>Item Name</label>
                                    <input id="edit-itemName" name="itemName" type="text" required>
                                </div>
                                <div class="modal-body">
                                    <label>Amount</label>
                                    <input id="edit-amount" type="number" name="amount" required>
                                </div>
                                <div class="modal-body">
                                    <label>Date</label>
                                    <input id="edit-date" type="date" name="date" required>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>
                        </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    
</body>
</html>