<%- include("partials/header") %>

<div class="col-md-9">
    <form name="myform" class="form-group" action="/register/" method="POST">
      <h2 style="text-align: center; font-weight: bold;font-size: 45px;">Register For New Account</h1>
      <div class="row jumbotron jumbotron-fluid">
        <div class="col-md-12 my-3">
          <label for="inputname">User Name</label>
          <input type="text" class="form-control" name='username' placeholder="User Name">
        </div>
        <div class="col-md-12 my-3">
          <label for="password">Password</label>
          <input type="password" class="form-control" name='password' placeholder="Password">
        </div>
        <button class="btn btn-primary my-3" style="text-align: center;align-self:center;" type="submit">Register</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
 
</body>
</html>